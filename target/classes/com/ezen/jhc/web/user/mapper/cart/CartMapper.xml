<mapper namespace="com.ezen.jhc.web.user.mapper.cstm.CartMapper">

	<select id="getCartByNum" resultType="com.ezen.jhc.web.user.dto.CartDTO">
		SELECT * FROM carts WHERE mem_num = #{mem_num}
	</select>
	
	<insert id="insertCart" >
	
	</insert>
	
	<!-- mem_num 넣어야할지 사용할 때 판단하고 추가 결정 -->
